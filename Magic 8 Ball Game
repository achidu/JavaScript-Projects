// The user will be able to input a question, then the program will output a random fortune.

// User enters name here
let userName = ''

// If there is a name entered, print "Hello (name)!" Otherwise, print "Hello!"
userName ? console.log(`Hello ${userName}!`) : console.log('Hello!')

// User enters question here, question is printed to the console
let userQuestion = ''
console.log(`${userName}, you asked: ${userQuestion}`)

// Generates a random number from 0 to 7
let randomNumber = Math.floor(Math.random() * 8)

// The variable for the eightball value is declared as an empty no value as a placeholder
eightBall = ''

// Uses the random number generated from the randomNumber function to assign eightBall a value
switch (randomNumber) {
  case 0:
    eightBall = 'It is certain'
    break;
  case 1: 
    eightBall = 'It is decidedly so'
    break;
  case 2:
    eightBall = 'Reply hazy try again'
    break;
  case 3: 
    eightBall = 'Cannot predict now'
    break;
  case 4:
    eightBall = ' Do not count on it'
    break;
  case 5:
    eightBall = 'My sources say no'
    break;
  case 6: 
    eightBall = 'Outlook not so good'
    break;
  case 7:
    eightBall = 'Signs point to yes'
}

// Prints the phrase assigned to the eightBall in a string
console.log(`The eight ball answered: ${eightBall}`)
