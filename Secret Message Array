// Editing a message to turn into a quote by Chris Pine

let secretMessage = ['Learning', 'is', 'not', 'about', 'what', 'you', 'get', 'easily', 'the', 'first', 'time,', 'it', 'is', 'about', 'what', 'you', 'can', 'figure', 'out.', '-2015,', 'Chris', 'Pine,', 'Learn', 'JavaScript'];

// Removes last element in the array
secretMessage.pop();

// Adds two new elements ('to' and 'program') to the end of the array
secretMessage.push('to', 'Program');

// Changes the seventh index (or eight element) in the array to 'right'
secretMessage[7] = 'right';

// Removes the first element in the array
secretMessage.shift();

// Adds a new element('Programming') to the array
secretMessage.unshift('Programming')

// Replaces five elements, starting from the sixth index (or seventh element), with a new element ('know')
secretMessage.splice(6,5,'know')

// Prints the message to the console with all the elements in the array joined together, seperated by a space
console.log(secretMessage.join(' '))
